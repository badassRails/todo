<div class="spacer col-md-2"></div>
<div class="container col-md-8">
	<div class="page-header">
		<h1>To Do</h1>
	</div>
	<% @categories.each do |category| %>
		<div class="panel panel-default">
			<div class="panel-body">
				<span class="category-title">
					<strong><%= link_to category.name, category_path(category) %></strong>
					<span>(<%= category.tasks.count %>)</span>
				</span>
				<%= link_to edit_category_path(category) do %>
					<span class="glyphicon glyphicon-pencil"></span>
				<% end %>
				<%= link_to category_path(category), method: :delete, data: { confirm: 'You Sure?'} do %>
					<span class="glyphicon glyphicon-remove"></span>
				<% end %>
			</div>
		</div>
	<% end %>
	<%= link_to new_category_path do %>
		<span class="btn btn-primary">
			<span>Add a new Category</span>
		</span>
	<% end %>
</div>